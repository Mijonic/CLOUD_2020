@model ManipulacijaPodacima.Ispit
@{
    ViewBag.Title = "AzuriranjeIspita";
}
<h2>Azuriranje ispita</h2>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


@using (Html.BeginForm("ModifikujIspit", "Ispit", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Predmet</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.IdIspita)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.IdIspita, new { @readonly = "readonly" })
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Datum)
        </div>
        <div class="editor-field">

            Datum ispita:
            <input type="date" name="datum" required />
                  
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Polozen)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Polozen)
            @Html.ValidationMessageFor(model => model.Polozen)
        </div>

        <p>
            <input type="submit" value="Azuriraj ispit" />

        </p>
    </fieldset>
}


<div>
    @Html.ActionLink("Povratak na prikaz ispita", "Index")
</div>
